<%- include('../partials/header') %>
<main class="container p-3">
    <div class="row">
        <div class="card mx-auto m-4">
            <div class="card-body">
                <h1>Welcome!!!</h1>
                <a href="/students/add" class="btn btn-success btn-block">Add a student</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-dark col-md-8 mx-auto">
                <thead class="thead-dark">
                    <tr>
                        <th class="lead">First Name</th>
                        <th class="lead">Last Name</th>
                        <th class="lead">Email</th>
                        <th class="lead">Grade</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i< students.length; i++) { %>
                    <tr>
                        <td><%= students[i].firstName %></td>
                        <td><%= students[i].fatherLastName %></td>
                        <td><%= students[i].email %></td>
                        <td><%= students[i].currentGrade %></td>
                        <td>
                            <a href="/students/update/<%= students[i]._id %>"><i class="fa fa-pencil fa-lg"></i></a>
                            <a href="/students/delete/<%= students[i]._id %>"><i class="fas fa-trash fa-lg"></i></a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</main>
<%- include('../partials/footer') %>