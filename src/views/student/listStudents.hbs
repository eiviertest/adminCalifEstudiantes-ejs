<div class="row">
    <div class="card mx-auto m-4">
        <div class="card-body">
            <h1>Welcome!!!</h1>
            <a href="/students/add" class="btn btn-success btn-block">Add a student</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-dark col-md-7 mx-auto">
            <thead class="thead-dark">
                <tr>
                    <th class="lead">Full Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each students}}
                <tr>
                    <td>{{firstName}}</td>
                    <td>
                        <a href="/students/update/{{_id}}"><i class="fa fa-pencil fa-lg"></i></a>
                        <a href="/students/delete/{{_id}}"><i class="fas fa-trash fa-lg"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>