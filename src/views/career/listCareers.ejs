<%- include('../partials/header') %>
<% if (careers) { %>  
<main class="container p-3"></main>
    <div class="row">
        <div class="card mx-auto m-4">
            <div class="card-body">
                <h1>Welcome!!!</h1>
                <a href="/careers/add" class="btn btn-success btn-block">Create new career</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-dark col-md-7 mx-auto">
                <thead class="thead-dark">
                    <tr>
                        <th class="lead">Career's name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i = 0; i < careers.length; i++) { %>
                    <tr>
                        <td><%= careers[i].name %></td>
                        <td>
                            <a href="/careers/update/<%= careers[i]._id %>"><i class="fa fa-pencil fa-lg"></i></a>
                            <a href="/careers/delete/<%= careers[i]._id %>"><i class="fas fa-trash fa-lg"></i></a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</main>
<% } %>
<%- include('../partials/footer') %>