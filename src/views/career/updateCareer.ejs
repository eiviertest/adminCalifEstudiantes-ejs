<%- include('../partials/header') %>
<main class="container p-3">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Update career</h3>
            </div>
            <div class="card-body">
                <form action="/careers/updateCareerDB/<%= career._id %>" method="POST">
                    <div class="form-group">
                        <textarea type="text" name="name" class="form-control" placeholder="Career's name" autofocus>
                            <%= career.name %>
                        </textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
<%- include('../partials/footer') %>