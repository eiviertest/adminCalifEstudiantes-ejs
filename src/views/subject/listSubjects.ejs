<%- include('../partials/header') %>
<main class="container p-3">
    <div class="row">
        <div class="card mx-auto m-4">
            <div class="card-body">
                <h1>Welcome!!!</h1>
                <a href="/subjects/add" class="btn btn-success btn-block">Create new subject</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-dark col-md-7 mx-auto">
                <thead class="thead-dark">
                    <tr>
                        <th class="lead">Subject's name</th>
                        <th class="lead">Grade</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i< subjects.length; i++) { %>
                    <tr>
                        <td><%= subjects[i].name %></td>
                        <td><%= subjects[i].grade %></td>
                        <td>
                            <a href="/subjects/update/<%= subjects[i]._id %>"><i class="fa fa-pencil fa-lg"></i>Update</a>
                            <a href="/subjects/delete/<%= subjects[i]._id %>"><i class="fas fa-trash fa-lg"></i>Delete</a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</main>
<%- include('../partials/footer') %>