<%- include('../partials/header') %>
{{#if careers}}
<div class="col-md-6 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Add subject</h3>
        </div>
        <div class="card-body">
            <form action="/subjects/saveSubject" method="POST">
                <label class="lead">Subject's name</label>
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Subject's name" autofocus>
                </div>
                <label class="lead">Grade</label>
                <div class="form-group">
                    <input type="number" name="grade" class="form-control" max="6" min="1" placeholder="Grade" pattern="Only numbers">
                </div>
                <label class="lead">Career</label>
                <div class="form-group">
                    <select name="careerID" class="form-control">
                        {{#each careers}}
                            <option value="{{_id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{else}}
<div class="row">
    <div class="card mx-auto">
        <div class="card-body">
            <h1>Excuse me!</h1>
            <p class="lead">There are no careers registered yet</p>
            <a href="/careers/add" class="btn btn-success btn-block">Add one</a>
        </div>
    </div>
</div>
{{/if}}
<%- include('../partials/footer') %>