{{#if careers}}
<div class="row">
    <div class="card mx-auto m-4">
        <div class="card-body">
            <h1>Welcome!!!</h1>
            <a href="/subjects/add" class="btn btn-success btn-block">Create new subject</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-dark col-md-7 mx-auto">
            <thead class="thead-dark">
                <tr>
                    <th class="lead">Career's name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each subject}}
                <tr>
                    <td>{{name}}</td>
                    <td>
                        <a href="/subjects/update/{{_id}}"><i class="fa fa-pencil fa-lg"></i></a>
                        <a href="/subjects/delete/{{_id}}"><i class="fas fa-trash fa-lg"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
{{else}}
<div class="row">
    <div class="card mx-auto">
        <div class="card-body">
            <h1>Excuse me!</h1>
            <p class="lead">There are no subjects registered yet</p>
            <a href="/subjects/add" class="btn btn-success btn-block">Add one</a>
        </div>
    </div>
</div>
{{/if}}