<%- include('../partials/header') %>
<main class="container p-3">
    <div class="row">
        <div class="card mx-auto m-4">
            <div class="card-body">
                <h1>Welcome!!!</h1>
                <a href="/unitSubject/add" class="btn btn-success btn-block">Create new Unit-Subject</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-dark col-md-7 mx-auto">
                <thead class="thead-dark">
                    <tr>
                        <th class="lead">Unit</th>
                        <th class="lead">Unit-Subject's name</th>
                        <th class="lead">Hours for unit</th>
                        <th class="lead">Hours for week</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i< unitSubjects.length; i++) { %>
                    <tr>
                        <td><%= unitSubjects[i].noUnit %></td>
                        <td><%= unitSubjects[i].nameUnit %></td>
                        <td><%= unitSubjects[i].hoursUnit %></td>
                        <td><%= unitSubjects[i].hoursWeek %></td>
                        <td>
                            <a href="/unitSubject/update/<%= unitSubjects[i]._id %>"><i class="fa fa-pencil fa-lg"></i>Update</a>
                            <a href="/unitSubject/delete/<%= unitSubjects[i]._id %>"><i class="fas fa-trash fa-lg"></i>Delete</a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</main>
<%- include('../partials/footer') %>